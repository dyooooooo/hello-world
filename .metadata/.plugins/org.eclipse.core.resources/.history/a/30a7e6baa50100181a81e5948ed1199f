import java.io.*;

public class MyReadFile {
	public static void main(String[] args){
		try{
			
			//locate data resourve
			File f = new File("c:/work/test.txt");
			
			//build up pipe
			FileInputStream fis = new FileInputStream(f);
			
			//operate pipe
			System.out.println((char)fis.read());
			
			fis.close();
			
			
		}catch(Exception e){}
		
	}

}
